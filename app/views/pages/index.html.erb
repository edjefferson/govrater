
<h1>Rate The Government Of <%= @government.name %> </h1>
<div id="voteButtons">
  <% (1..4).each do |x| %>
  <div id="vote<%= x %>" class="voteButton" data-govid="<%= @government.country_code %>">
    <%= image_tag("#{x}.svg", :alt => "") %>
  </div>
  <% end %>
</div>

<div id="results">
<h2>results</h2>
<%= render "votes" %>
</div>

<br>
